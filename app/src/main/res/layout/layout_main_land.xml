<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout_main_id"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/fr_list_container"
		android:layout_weight="@integer/list_item_width_weight"
		android:layout_width="0dp"
		android:layout_height="match_parent" />

	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/fr_details_container"
		android:layout_weight="@integer/details_item_width_weight"
		android:layout_width="0dp"
		android:layout_height="match_parent" />

</LinearLayout>
