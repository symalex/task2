<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:id="@+id/details_list_big_item_id"
	>

	<LinearLayout
		android:id="@+id/details_list_big_item_container_id"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>

	<TextView
		android:id="@+id/details_list_big_item_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textColor="@color/deafult_text_color"
		/>
	
	<ImageView
		android:id="@+id/details_list_big_item_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:adjustViewBounds="true"
		/>

	</LinearLayout>

</RelativeLayout>
